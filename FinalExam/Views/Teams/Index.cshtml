@model IEnumerable<FinalExam.Models.Teams>

@{
    ViewData["Title"] = "NHL League Standings";
}

<h1>Index</h1>
<!--
<p>
    <a asp-action="Create">Create New</a>
</p>-->
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Games)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wins)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Losses)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OvertimeLosses)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Points)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Divisions)
            </th>
            <th>
                
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Games)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Wins)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Losses)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OvertimeLosses)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Points)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Divisions.Name)
                </td>
                <td>
                    
                    <img src="images/@Html.DisplayFor(modelItem => item.Logo)" alt="@Html.DisplayFor(modelItem => item.Logo)">
                </td>
                <!--
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TeamID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TeamID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.TeamID">Delete</a>
                </td>-->
            </tr>
        }
    </tbody>
</table>
